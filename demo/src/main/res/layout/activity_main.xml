<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnCameraDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_camera_demo"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLocationDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_location_demo"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnMultipleDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_multiple_demo"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnJavaDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_java_demo"
        android:layout_marginBottom="16dp" />

</LinearLayout>